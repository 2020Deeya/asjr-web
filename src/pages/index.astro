---
import Layout from '../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<script>
  import '@momentum-design/components/dist/components/banner/index.js';
  import '@momentum-design/components/dist/components/button/index.js';
  import '@momentum-design/components/dist/components/card/index.js';
  import '@momentum-design/components/dist/components/input/index.js';
  import '@momentum-design/components/dist/components/icon/index.js';
  import '@momentum-design/components/dist/components/text/index.js';
</script>

<Layout title="Advocates for Social Justice Reform">
  <mdc-banner class="banner">
    <mdc-text type="body-large-regular" slot="content"
      >Are you arrested or detained?</mdc-text
    >
    <mdc-button slot="content" inverted> Seek help →</mdc-button>
  </mdc-banner>
  <div class="page-container">
    <div class="hero-container">
      <!-- Hero Section -->
      <section class="hero">
        <mdc-text type="heading-xlarge-bold" tagname="h1">
          Justice with Compassion.<br />Support at Every Step.
        </mdc-text>
        <mdc-text type="body-large-regular" tagname="p" class="hero-subtext">
          We advocate for a fairer legal system, ensuring that every individual
          receives compassionate and competent support throughout the criminal
          legal process.
        </mdc-text>
        <mdc-button size="40">Learn more →</mdc-button>
      </section>

      <!-- Hero Image -->
      <section class="hero-image">
        <img
          src={`${baseUrl}images/hero/hero-protest.jpg`}
          alt="Advocates holding signs for social justice"
        />
      </section>
    </div>

    <!-- Who We Are -->
    <div class="who-we-are-container">
      <section class="who-we-are">
        <section class="text-on-left">
          <mdc-text class="heading-tag" tagname="span">Who we are</mdc-text>
          <mdc-text
            class="heading-text"
            type="heading-large-medium"
            tagname="h2"
          >
            Together, we're building a fairer and more humane justice system.
          </mdc-text>
          <mdc-text
            type="body-large-regular"
            tagname="p"
            class="who-description"
          >
            Advocates for Social Justice Reform (ASJR) is a volunteer-run
            coalition dedicated to transforming the criminal legal system in
            Travis County.
          </mdc-text>
          <mdc-text
            type="body-large-regular"
            tagname="p"
            class="who-description"
          >
            We work to ensure that every person receives fair representation,
            compassionate support, and dignity at every step of the process.
          </mdc-text>
          <mdc-button size="40">Learn more →</mdc-button>
        </section>
        <section class="image-on-right">
          <img
            src={`${baseUrl}images/about/about-1.jpg`}
            alt="Advocates for Social Justice Reform team members smiling"
          />
          <img
            src={`${baseUrl}images/about/about-2.jpg`}
            alt="Advocates for Social Justice Reform team members at a protest"
          />
        </section>
      </section>

      <!-- Values Section -->
      <section class="values">
        <mdc-card card-title="Education">
          <mdc-text slot="body" type="body-midsize-regular" tagname="span">
            To educate ourselves and our communities about social justice
            issues.
          </mdc-text>
        </mdc-card>
        <mdc-card card-title="Communication">
          <mdc-text slot="body" type="body-midsize-regular" tagname="span">
            To educate ourselves and our communities about social justice
            issues.
          </mdc-text>
        </mdc-card>
        <mdc-card card-title="Advocacy">
          <mdc-text slot="body" type="body-midsize-regular" tagname="span">
            To be a voice of change in community forums.
          </mdc-text>
        </mdc-card>
        <mdc-card card-title="Collaboration">
          <mdc-text slot="body" type="body-midsize-regular" tagname="span">
            To listen to and collaborate with stakeholders representing diverse
            viewpoints.
          </mdc-text>
        </mdc-card>
        <mdc-card card-title="Oversight & Evaluate">
          <mdc-text slot="body" type="body-midsize-regular" tagname="p">
            To educate ourselves and our communities about social justice
            issues.
          </mdc-text>
        </mdc-card>
      </section>
    </div>

    <!-- Programs Section -->
    <section class="programs">
      <div class="programs-inner">
        <mdc-text type="heading-large-medium" tagname="h2">
          From court to community, creating lasting change.
        </mdc-text>
        <div class="program-grid">
          {
            Array.from({ length: 6 }).map(() => (
              <mdc-card
                card-title="CAFA (Counsel at First Appearance)"
                image-src={`${baseUrl}images/what-we-do/cafa.jpg`}
                image-alt="CAFA"
                variant="border"
                orientation="horizontal"
                class="horizontal-card"
              >
                <mdc-text slot="body" type="body-small-regular" tagname="p">
                  Legal support at first appearance.
                </mdc-text>
                <mdc-button slot="footer-button-secondary">
                  Learn more →
                </mdc-button>
              </mdc-card>
            ))
          }
        </div>
      </div>
    </section>

    <!-- News Section -->
    <section class="news">
      <mdc-text type="heading-large-medium" tagname="h2">Latest News</mdc-text>
      <div class="news-grid">
        {
          Array.from({ length: 3 }).map(() => (
            <mdc-card
              card-title="CAFA (Counsel at First Appearance)"
              variant="border"
            >
              <mdc-text slot="body" type="body-small-regular" tagname="p">
                Lorem ipsum dolor sit amet consectetur adipiscing elit. Nulla
                facilisi.
              </mdc-text>
            </mdc-card>
          ))
        }
        <mdc-button>See more →</mdc-button>
      </div>
    </section>

    <!-- Join Us Section -->
    <section class="join-us">
      <div class="join-inner">
        <mdc-text type="heading-large-medium" tagname="h2">
          Join us in building a more compassionate justice system.
        </mdc-text>
        <mdc-text type="body-large-regular" tagname="p">
          Stay up-to-date on the latest reports and news from ASJR.
        </mdc-text>
        <form class="join-form">
          <mdc-input label="First name" required></mdc-input>
          <mdc-input label="Last name" required></mdc-input>
          <mdc-input label="Email address" type="email" required></mdc-input>
          <mdc-button type="submit" variant="filled">Submit</mdc-button>
        </form>
      </div>
    </section>
  </div>
</Layout>

<style scoped>
  .page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    overflow-x: hidden;
  }

  .banner {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    background-color: var(
      --mds-color-theme-background-accent-normal,
      rgb(17, 112, 207)
    );
    padding: unset;
    position: fixed;
  }

  .banner mdc-text {
    color: var(
      --mds-color-theme-inverted-text-primary-normal,
      rgba(255, 255, 255, 0.95)
    );
  }
  /* HERO SECTION */

  .hero-container,
  .who-we-are-container,
  .programs {
    width: calc(100% - 40rem); /* account for padding */
    padding: 7.5rem 20rem;
  }
  .hero {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-subtext {
    margin-bottom: 2rem;
  }
  .hero-button {
    margin-top: 0.75rem;
  }

  /* HERO IMAGE */
  .hero-image {
    width: 100%;
    margin-top: 2rem;
    display: flex;
    justify-content: center;
  }

  .hero-image img {
    width: 100%;
    max-width: 72rem;
    border-radius: 1rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    object-fit: cover;
  }

  /* WHO WE ARE */

  .who-we-are-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
  .who-we-are {
    display: flex;
    justify-content: space-between;
    gap: 2.5rem;
  }

  .heading-tag {
    color: var(--color-theme-text-accent-normal, #0353a8);
    font-size: var(--font-size-body-midsize, 14px);
    font-style: normal;
    font-weight: 500;
    line-height: var(--font-line-height-body-large, 24px); /* 171.429% */
    text-transform: uppercase;
  }
  .heading-text {
    color: var(--color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    font-size: var(--font-size-heading-xlarge, 40px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--font-line-height-heading-xlarge, 52px); /* 130% */
  }
  .text-on-left {
    width: 100%;
  }
  .image-on-right {
    display: flex;
    gap: 2.5rem;
  }
  .image-on-right img {
    width: 45%;
    height: auto;
    object-fit: contain;
  }
  .who-description {
    margin: 1.75rem auto 2.5rem;
    max-width: 46rem;
    color: var(--mds-color-neutral-700, #4b5563);
  }

  /* VALUES */
  .values {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    gap: 1.75rem;
  }

  .values mdc-card {
    min-width: unset;
    --mdc-card-width: 15rem;
    height: 100%;
  }
  /* PROGRAMS */
  .programs {
    background: var(--color-theme-background-accent-normal, rgb(17, 112, 207));
    color: var(
      --color-theme-inverted-text-primary-normal,
      rgba(255, 255, 255, 0.95)
    );
  }
  .programs-inner {
    max-width: 72rem;
    margin: 0 auto;
    text-align: center;
  }

  .program-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3.5rem;
  }
  .horizontal-card {
    min-width: unset;
    --mdc-card-width: 24rem;
  }

  mdc-card::part(body) {
    background-color: var(
      --mds-color-theme-solid-primary-normal,
      rgb(255, 255, 255)
    );
    color: var(--mds-color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    text-align: left;
    border-top-right-radius: 0.5rem;
    border-bottom-right-radius: 0.5rem;
  }

  /* NEWS */
  .news {
    width: 100%;
    padding: 7rem 1rem;
    text-align: center;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 72rem;
    margin: 3rem auto 0;
  }

  /* JOIN US */
  .join-us {
    width: 100%;
    background: #f9fafb;
    padding: 7rem 1rem;
  }

  .join-inner {
    max-width: 60rem;
    margin: 0 auto;
    text-align: center;
  }

  .join-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-top: 2.5rem;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 768px) {
    .join-form {
      flex-direction: row;
      gap: 1rem;
    }
  }

  /* GLOBAL TYPOGRAPHY ADJUSTMENTS */
  mdc-text[type='heading-xlarge-bold'] {
    color: var(--color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    text-align: center;
    font-size: var(--font-size-headline, 72px);
    font-style: normal;
    font-weight: 800;
    line-height: var(--font-line-height-headline-headline, 85px); /* 118.056% */
  }

  mdc-text[type='heading-large-medium'] {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    line-height: 1.25;
  }

  mdc-text[type='body-large-regular'],
  mdc-text[type='body-midsize-regular'] {
    color: var(--color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    font-size: var(--font-size-body-xlarge, 24px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--font-line-height-body-xlarge, 32px);
  }
</style>

<script>
  // Import the components we need
  import '@momentum-design/components/dist/components/text/index.js';
  import '@momentum-design/components/dist/components/button/index.js';
  import '@momentum-design/components/dist/components/card/index.js';
</script>
