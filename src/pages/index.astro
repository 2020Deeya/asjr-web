---
import Layout from '../layouts/Layout.astro';
import GetInvolvedForm from '../components/shared/Form/GetInvolvedForm.astro';
import { t } from '../i18n/get';

const baseUrl = import.meta.env.BASE_URL;

// Detect language from URL path
const currentPath = Astro.url.pathname;
const relativePath = currentPath.startsWith(baseUrl) 
  ? currentPath.slice(baseUrl.length) 
  : currentPath;
const isSpanish = relativePath.startsWith('es/') || relativePath === 'es';
const lang: 'en' | 'es' = isSpanish ? 'es' : 'en';
---

<script>
  import '@momentum-design/components/dist/components/banner/index.js';
  import '@momentum-design/components/dist/components/button/index.js';
  import '@momentum-design/components/dist/components/card/index.js';
  import '@momentum-design/components/dist/components/input/index.js';
  import '@momentum-design/components/dist/components/icon/index.js';
  import '@momentum-design/components/dist/components/text/index.js';
</script>

<Layout title={lang === 'es' ? 'Defensores de la Reforma de Justicia Social' : 'Advocates for Social Justice Reform'} lang={lang}>
  <mdc-banner class='banner'>
    <mdc-text type='body-large-regular' slot='content'>{t(lang, 'banner.question')}</mdc-text>
    <mdc-button slot='content' inverted>{t(lang, 'banner.cta')}</mdc-button>
  </mdc-banner>
  <div class='page-container'>
    <div class='hero-container'>
      <!-- Hero Section -->
      <section class='hero'>
        <mdc-text type='heading-xlarge-bold' tagname='h1' set:html={t(lang, 'hero.title')}>
        </mdc-text>
        <mdc-text type='body-large-regular' tagname='p' class='hero-subtext'>
          {t(lang, 'hero.subtitle')}
        </mdc-text>
        <mdc-button size='40'>{t(lang, 'hero.cta')}</mdc-button>
      </section>

      <!-- Hero Image -->
      <section class='hero-image'>
        <img
          src={`${baseUrl}images/hero/hero-protest.jpg`}
          alt='Advocates holding signs for social justice'
        />
      </section>
    </div>

    <!-- Who We Are -->
    <div class='who-we-are-container'>
      <section class='who-we-are'>
        <section class='text-on-left'>
          <mdc-text class='heading-tag' tagname='span'>{t(lang, 'whoWeAre.tag')}</mdc-text>
          <mdc-text class='heading-text' type='heading-large-medium' tagname='h2'>
            {t(lang, 'whoWeAre.heading')}
          </mdc-text>
          <mdc-text type='body-large-regular' tagname='p' class='who-description'>
            {t(lang, 'whoWeAre.description1')}
          </mdc-text>
          <mdc-text type='body-large-regular' tagname='p' class='who-description'>
            {t(lang, 'whoWeAre.description2')}
          </mdc-text>
          <mdc-button size='40'>{t(lang, 'whoWeAre.cta')}</mdc-button>
        </section>
        <section class='image-on-right'>
          <img
            src={`${baseUrl}images/about/about-1.jpg`}
            alt='Advocates for Social Justice Reform team members smiling'
          />
          <img
            src={`${baseUrl}images/about/about-2.jpg`}
            alt='Advocates for Social Justice Reform team members at a protest'
          />
        </section>
      </section>

      <!-- Values Section -->
      <section class='values'>
        <mdc-card card-title={t(lang, 'values.education.title')}>
          <mdc-text slot='body' type='body-midsize-regular' tagname='span'>
            {t(lang, 'values.education.description')}
          </mdc-text>
        </mdc-card>
        <mdc-card card-title={t(lang, 'values.communication.title')}>
          <mdc-text slot='body' type='body-midsize-regular' tagname='span'>
            {t(lang, 'values.communication.description')}
          </mdc-text>
        </mdc-card>
        <mdc-card card-title={t(lang, 'values.advocacy.title')}>
          <mdc-text slot='body' type='body-midsize-regular' tagname='span'>
            {t(lang, 'values.advocacy.description')}
          </mdc-text>
        </mdc-card>
        <mdc-card card-title={t(lang, 'values.collaboration.title')}>
          <mdc-text slot='body' type='body-midsize-regular' tagname='span'>
            {t(lang, 'values.collaboration.description')}
          </mdc-text>
        </mdc-card>
        <mdc-card card-title={t(lang, 'values.oversight.title')}>
          <mdc-text slot='body' type='body-midsize-regular' tagname='p'>
            {t(lang, 'values.oversight.description')}
          </mdc-text>
        </mdc-card>
      </section>
    </div>

    <!-- Programs Section -->
    <section class='programs'>
      <div class='programs-inner'>
        <mdc-text type='heading-large-medium' tagname='h2'>
          {t(lang, 'programs.heading')}
        </mdc-text>
        <div class='program-grid'>
          {
            Array.from({ length: 6 }).map(() => (
              <mdc-card
                card-title={t(lang, 'programs.cafa.title')}
                image-src={`${baseUrl}images/what-we-do/cafa.jpg`}
                image-alt='CAFA'
                variant='border'
                orientation='horizontal'
                class='horizontal-card'
              >
                <mdc-text slot='body' type='body-small-regular' tagname='p'>
                  {t(lang, 'programs.cafa.description')}
                </mdc-text>
                <mdc-button slot='footer-button-secondary'>{t(lang, 'programs.cafa.cta')}</mdc-button>
              </mdc-card>
            ))
          }
        </div>
      </div>
    </section>

    <!-- News Section -->
    <section class='news'>
      <mdc-text type='heading-large-medium' tagname='h2'>{t(lang, 'news.heading')}</mdc-text>
      <div class='news-grid'>
        {
          Array.from({ length: 3 }).map(() => (
            <mdc-card card-title={t(lang, 'news.placeholder.title')} variant='border'>
              <mdc-text slot='body' type='body-small-regular' tagname='p'>
                {t(lang, 'news.placeholder.description')}
              </mdc-text>
            </mdc-card>
          ))
        }
        <mdc-button>{t(lang, 'news.cta')}</mdc-button>
      </div>
    </section>

    <!-- Join Us Section -->
    <section class='join-us'>
      <GetInvolvedForm lang={lang} />
    </section>
  </div>
</Layout>

<style scoped>
  .page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    overflow-x: hidden;
  }

  .banner {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--mds-color-theme-background-accent-normal, rgb(17, 112, 207));
    padding: unset;
    position: fixed;
  }

  .banner mdc-text {
    color: var(--mds-color-theme-inverted-text-primary-normal, rgba(255, 255, 255, 0.95));
  }
  /* HERO SECTION */

  .hero-container,
  .who-we-are-container,
  .programs {
    width: calc(100% - 40rem); /* account for padding */
    padding: 7.5rem 20rem;
  }
  .hero {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-subtext {
    margin-bottom: 2rem;
  }
  .hero-button {
    margin-top: 0.75rem;
  }

  /* HERO IMAGE */
  .hero-image {
    width: 100%;
    margin-top: 2rem;
    display: flex;
    justify-content: center;
  }

  .hero-image img {
    width: 100%;
    max-width: 72rem;
    border-radius: 1rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    object-fit: cover;
  }

  /* WHO WE ARE */

  .who-we-are-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
  .who-we-are {
    display: flex;
    justify-content: space-between;
    gap: 2.5rem;
  }

  .heading-tag {
    color: var(--color-theme-text-accent-normal, #0353a8);
    font-size: var(--font-size-body-midsize, 14px);
    font-style: normal;
    font-weight: 500;
    line-height: var(--font-line-height-body-large, 24px); /* 171.429% */
    text-transform: uppercase;
  }
  .heading-text {
    color: var(--color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    font-size: var(--font-size-heading-xlarge, 40px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--font-line-height-heading-xlarge, 52px); /* 130% */
  }
  .text-on-left {
    width: 100%;
  }
  .image-on-right {
    display: flex;
    gap: 2.5rem;
  }
  .image-on-right img {
    width: 45%;
    height: auto;
    object-fit: contain;
  }
  .who-description {
    margin: 1.75rem auto 2.5rem;
    max-width: 46rem;
    color: var(--mds-color-neutral-700, #4b5563);
  }

  /* VALUES */
  .values {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    gap: 1.75rem;
  }

  .values mdc-card {
    min-width: unset;
    --mdc-card-width: 15rem;
    height: 100%;
  }
  /* PROGRAMS */
  .programs {
    background: var(--color-theme-background-accent-normal, rgb(17, 112, 207));
    color: var(--color-theme-inverted-text-primary-normal, rgba(255, 255, 255, 0.95));
  }
  .programs-inner {
    max-width: 72rem;
    margin: 0 auto;
    text-align: center;
  }

  .program-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3.5rem;
  }
  .horizontal-card {
    min-width: unset;
    --mdc-card-width: 24rem;
  }

  mdc-card::part(body) {
    background-color: var(--mds-color-theme-solid-primary-normal, rgb(255, 255, 255));
    color: var(--mds-color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    text-align: left;
    border-top-right-radius: 0.5rem;
    border-bottom-right-radius: 0.5rem;
  }

  /* NEWS */
  .news {
    width: 100%;
    padding: 7rem 1rem;
    text-align: center;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 72rem;
    margin: 3rem auto 0;
  }

  /* JOIN US */
  .join-us {
    width: 100%;
    background: #f9fafb;
    padding: 7rem 1rem;
  }

  /* GLOBAL TYPOGRAPHY ADJUSTMENTS */
  mdc-text[type='heading-xlarge-bold'] {
    color: var(--color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    text-align: center;
    font-size: var(--font-size-headline, 72px);
    font-style: normal;
    font-weight: 800;
    line-height: var(--font-line-height-headline-headline, 85px); /* 118.056% */
  }

  mdc-text[type='heading-large-medium'] {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    line-height: 1.25;
  }

  mdc-text[type='body-large-regular'],
  mdc-text[type='body-midsize-regular'] {
    color: var(--color-theme-text-primary-normal, rgba(0, 0, 0, 0.95));
    font-size: var(--font-size-body-xlarge, 24px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--font-line-height-body-xlarge, 32px);
  }
</style>

<script>
  // Import the components we need
  import '@momentum-design/components/dist/components/text/index.js';
  import '@momentum-design/components/dist/components/button/index.js';
  import '@momentum-design/components/dist/components/card/index.js';
</script>
