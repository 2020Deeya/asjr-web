---
// GetInvolvedForm.astro - Newsletter/Get Involved Form Component
import "./GetInvolvedForm.css";

export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`get-involved-form ${className}`}>
  <div class="form-header">
    <mdc-text type="heading-large-bold" tagname="h2" class="form-title">
      Join us in building a more compassionate justice system.
    </mdc-text>
    <mdc-text type="body-large-regular" tagname="p" class="form-subtitle">
      Stay up-to-date on the latest reports and news from ASJR.
    </mdc-text>
  </div>

  <div class="action-buttons">
    <mdc-button
      variant="secondary"
      class="action-item"
      aria-label="Donate to ASJR"
    >
      <mdc-icon name="favorites-bold" size="24" slot="icon"></mdc-icon>
      <span>Donate</span>
    </mdc-button>

    <mdc-button
      variant="secondary"
      class="action-item"
      aria-label="Be an advocate"
    >
      <mdc-icon name="speaker-bold" size="24" slot="icon"></mdc-icon>
      <span>Be an advocate</span>
    </mdc-button>

    <mdc-button
      variant="secondary"
      class="action-item"
      aria-label="Sign up for volunteers"
    >
      <mdc-icon name="raise-hand-bold" size="24" slot="icon"></mdc-icon>
      <span>Sign up for volunteers</span>
    </mdc-button>
  </div>

  <form class="newsletter-form" novalidate>
    <fieldset>
      <legend class="sr-only">Newsletter Signup</legend>

      <div class="form-row">
        <mdc-input
          id="first-name"
          name="firstName"
          label="First name"
          placeholder=""
          required></mdc-input>

        <mdc-input
          id="last-name"
          name="lastName"
          label="Last name"
          placeholder=""
          required></mdc-input>
      </div>

      <mdc-input
        id="email"
        name="email"
        type="email"
        label="Email address"
        placeholder="Your address@email.com"
        required></mdc-input>

      <mdc-button type="submit" variant="primary"> Submit </mdc-button>
    </fieldset>
  </form>
</div>

<script>
  import("@momentum-design/components/dist/components/button/index.js");
  import("@momentum-design/components/dist/components/input/index.js");
  import("@momentum-design/components/dist/components/icon/index.js");
  import("@momentum-design/components/dist/components/text/index.js");
</script>
