---
import './Footer.css'
import { t } from '../../i18n/get';

import { Image } from 'astro:assets';
import LogoASJR from '../../assets/images/header/logo-asjr.png'
import LogoKnowbility from '../../assets/images/footer/logo-knowbility.png'

// Footer.astro - Main footer component
export interface Props {
  class?: string;
  lang?: 'en' | 'es';
}

const currentYear = new Date().getFullYear();

const { class: className = "", lang = 'en' } = Astro.props as Props;

// Get current path for active navigation state
const currentPath = Astro.url.pathname;

// Get base URL from Astro environment
const baseUrl = import.meta.env.BASE_URL;

// Detect if Spanish for route prefixing
const relativePath = currentPath.startsWith(baseUrl) 
  ? currentPath.slice(baseUrl.length) 
  : currentPath;
const isSpanish = relativePath.startsWith('es/') || relativePath.startsWith('es');

// Navigation items with proper base path handling and translations
const navItems = [
  { key: 'nav.about', href: `${baseUrl}${isSpanish ? 'es/' : ''}about` },
  { key: 'nav.whatWeDo', href: `${baseUrl}${isSpanish ? 'es/' : ''}what-we-do` },
  { key: 'nav.resources', href: `${baseUrl}${isSpanish ? 'es/' : ''}resources` },
  { key: 'nav.blog', href: `${baseUrl}${isSpanish ? 'es/' : ''}blog` },
  { key: 'nav.getInvolved', href: `${baseUrl}${isSpanish ? 'es/' : ''}get-involved` }
];

const seekHelpLink = baseUrl + "resources";

---

<script>
  // Import only the components needed for Footer
  import '@momentum-design/components/dist/components/text/index.js';
</script>

<footer>
  <div class="section">
    <div class="inner-container">
      <div class="footer-content">
        <div class="footer-brand">
          <a href={baseUrl} class="logo-asjr">
            <Image src={LogoASJR} alt="Advocates for Social Justice Reform logo" />
          </a>
          <a href="#" class="logo-knowbility">
            <Image src={LogoKnowbility} alt="Knowability logo" />
          </a>
        </div>

        <div class="footer-sitemap">
          <ul>
            {navItems.map((item) => (
            <li><a href={item.href}><span>{t(lang, item.key)}</span></a></li>
          ))}
          </ul>
        </div>
      </div>

      <div class="footer-copyright">
        {t(lang, 'footer.copyright')}
      </div>
    </div>
  </div>
</footer>